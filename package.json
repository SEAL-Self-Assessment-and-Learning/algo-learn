{
  "name": "algo-learn-monorepo",
  "private": true,
  "workspaces": [
    "front-end",
    "settings",
    "shared",
    "packages/*"
  ],
  "license": "MIT",
  "author": "Holger Dell (https://holgerdell.com)",
  "scripts": {
    "dev": "cd packages/svelte-front-end; $npm_execpath run dev",
    "build": "cd packages/svelte-front-end; $npm_execpath run build",
    "preview": "cd packages/svelte-front-end; $npm_execpath run preview",
    "build:json-schema": "$npm_execpath run ts-json-schema-generator --path 'src/**/QuestionGenerator.ts' --tsconfig ./tsconfig.ts-json-schema-generator.json --type 'Question'",
    "test": "$npm_execpath run lint && $npm_execpath run test:unit",
    "test:unit": "which bun && bun test --bail || vitest run --bail 1",
    "lint": "eslint && tsc && prettier . --check && cd packages/svelte-front-end && $npm_execpath run lint",
    "lint-fix": "eslint --fix && cd packages/svelte-front-end && $npm_execpath run eslint --fix",
    "format": "prettier . --write && cd packages/svelte-front-end && $npm_execpath run format",
    "clean": "rm -rf dist/ .yarn/cache/ node_modules/ *front-end/node_modules/ settings/node_modules/ shared/node_modules/ packages/svelte-front-end/node_modules/ docs/ vite-bundle-visualizer.html",
    "visualize": "$npm_execpath run vite-bundle-visualizer -o vite-bundle-visualizer.html",
    "docs": "$npm_execpath run typedoc --out docs shared/src/**/*.ts shared/src/**/*.tsx"
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin": "^1.25.0",
    "@eslint/js": "^9.19.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/eslint-plugin-query": "^5.65.0",
    "@types/eslint__js": "^8.42.3",
    "bun-types": "^1.2.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "~3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.0.11",
    "vite-bundle-visualizer": "^1.2.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.4"
  }
}
