{
  "name": "seal",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "author": "SEAL <SEAL@ae.cs.uni-frankfurt.de>",
  "description": "An interactive learning platform for typical undergraduate courses.",
  "contributors": [
    {
      "name": "Holger Dell",
      "url": "https://holgerdell.com"
    },
    {
      "name": "Alex Schickedanz",
      "url": "https://ae.cs.uni-frankfurt.de/staff/alex_schickedanz.html"
    },
    {
      "name": "Janette Welker",
      "url": "https://github.com/welkerje"
    },
    {
      "name": "Fabian Stiewe",
      "url": "https://github.com/Fabianstw"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SEAL-Self-Assessment-and-Learning/algo-learn"
  },
  "bugs": {
    "url": "https://github.com/SEAL-Self-Assessment-and-Learning/algo-learn/issues"
  },
  "scripts": {
    "dev": "cd packages/svelte-front-end; $npm_execpath run dev",
    "build": "cd packages/svelte-front-end; $npm_execpath run build",
    "preview": "cd packages/svelte-front-end; $npm_execpath run preview",
    "build:json-schema": "$npm_execpath run ts-json-schema-generator --path 'src/**/QuestionGenerator.ts' --tsconfig ./tsconfig.ts-json-schema-generator.json --type 'Question'",
    "test": "$npm_execpath run lint && $npm_execpath run test:unit",
    "test:unit": "which bun && bun test --bail || vitest run --bail 1",
    "lint": "eslint && prettier . --check && cd packages/svelte-front-end && $npm_execpath run lint",
    "lint-fix": "eslint --fix && cd packages/svelte-front-end && $npm_execpath run eslint --fix",
    "format": "prettier . --write && cd packages/svelte-front-end && $npm_execpath run format",
    "clean": "rm -rf dist/ .yarn/cache/ node_modules/ packages/settings/node_modules/ packages/shared/node_modules/ packages/svelte-front-end/node_modules/ docs/ vite-bundle-visualizer.html",
    "visualize": "$npm_execpath run vite-bundle-visualizer -o vite-bundle-visualizer.html",
    "docs": "$npm_execpath run typedoc --out docs packages/shared/src/**/*.ts shared/src/**/*.tsx"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/js": "^9.35.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@types/eslint": "^9.6.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^24.3.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.12.3",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "ts-json-schema-generator": "^2.4.0",
    "typedoc": "^0.28.15",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.43.0",
    "vite-bundle-visualizer": "^1.2.1",
    "vitest": "^3.2.4"
  }
}
