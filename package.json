{
  "name": "algo-learn",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT",
  "author": "Holger Dell (https://holgerdell.com)",
  "scripts": {
    "dev": "vite front-end",
    "build": "vite build front-end",
    "preview": "vite preview front-end",
    "build:json-schema": "$npm_execpath run ts-json-schema-generator --path 'src/**/QuestionGenerator.ts' --tsconfig ./tsconfig.ts-json-schema-generator.json --type 'Question'",
    "test": "$npm_execpath run test:check && $npm_execpath run test:unit && $npm_execpath run test:lint && $npm_execpath run test:format",
    "test:unit": "which bun && bun test --bail || vitest run --bail 1",
    "test:lint": "eslint */src/**/*.ts */src/**/*.tsx",
    "test:check": "tsc",
    "test:format": "prettier front-end/src/ shared/src --check",
    "format": "prettier ./front-end/src/ ./shared/src ./*/src/**/*.css --write",
    "clean": "rm -rf dist/ .yarn/cache/ node_modules/ docs/ vite-bundle-visualizer.html",
    "visualize": "$npm_execpath run vite-bundle-visualizer -o vite-bundle-visualizer.html",
    "docs": "$npm_execpath run typedoc --out docs shared/src/**/*.ts shared/src/**/*.tsx"
  },
  "devDependencies": {
    "@types/katex": "^0.16.6",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/react-syntax-highlighter": "^15.5.10",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "@vitejs/plugin-react": "^4.1.1",
    "eslint": "^8.53.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "^4.6.0",
    "pinst": "^3.0.0",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "prettier-plugin-css-order": "^2.0.1",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "react-circular-progressbar": "^2.1.0",
    "stylelint": "^15.11.0",
    "stylelint-config-recommended": "^13.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "tailwindcss": "^3.3.5",
    "ts-json-schema-generator": "^1.4.0",
    "typedoc": "^0.25.3",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-bundle-visualizer": "^0.11.0",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@fontsource/noto-sans": "^5.0.17",
    "@matejmazur/react-katex": "^3.1.3",
    "fraction.js": "^4.3.7",
    "katex": "^0.16.9",
    "mathjs": "^12.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0",
    "react-router-dom": "^6.18.0",
    "react-syntax-highlighter": "^15.5.0",
    "react-tooltip": "^5.22.0",
    "use-local-storage-state": "^19.1.0"
  }
}
