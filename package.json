{
  "name": "algo-learn",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT",
  "author": "Holger Dell (https://holgerdell.com)",
  "scripts": {
    "dev": "vite front-end",
    "build": "vite build front-end",
    "preview": "vite preview front-end",
    "build:json-schema": "$npm_execpath run ts-json-schema-generator --path 'src/**/QuestionGenerator.ts' --tsconfig ./tsconfig.ts-json-schema-generator.json --type 'Question'",
    "test": "$npm_execpath run test:check && $npm_execpath run test:unit && $npm_execpath run test:lint && $npm_execpath run test:format",
    "test:unit": "which bun && bun test --bail || vitest run --bail 1",
    "test:lint": "eslint */src/**/*.ts */src/**/*.tsx",
    "test:check": "tsc",
    "test:format": "prettier ./settings ./front-end/src ./shared/src ./*/src/**/*.css --check",
    "format": "prettier ./settings ./front-end/src ./shared/src ./*/src/**/*.css --write",
    "clean": "rm -rf dist/ .yarn/cache/ node_modules/ docs/ vite-bundle-visualizer.html",
    "visualize": "$npm_execpath run vite-bundle-visualizer -o vite-bundle-visualizer.html",
    "docs": "$npm_execpath run typedoc --out docs shared/src/**/*.ts shared/src/**/*.tsx"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@tailwindcss/typography": "^0.5.13",
    "@types/katex": "^0.16.7",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "@vitejs/plugin-react": "^4.2.1",
    "bun-types": "^1.1.8",
    "eslint": "^8",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "^4.6.2",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "react-circular-progressbar": "^2.1.0",
    "stylelint": "^16.5.0",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-bundle-visualizer": "^1.2.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@floating-ui/react": "^0.26.15",
    "@matejmazur/react-katex": "^3.1.3",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-hover-card": "^1.0.7",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-toggle": "^1.0.3",
    "@radix-ui/react-toggle-group": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "fraction.js": "^4.3.7",
    "katex": "^0.16.10",
    "lucide-react": "^0.378.0",
    "mathjs": "^12.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.2.1",
    "react-router-dom": "^6.23.1",
    "react-syntax-highlighter": "^15.5.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "use-local-storage-state": "^19.2.0"
  }
}
